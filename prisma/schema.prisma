generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
  other
  undisclosed
}

model Driver {
  id      String @id @default(cuid())
  name    String
  cpf     String
  age     Int
  gender  Gender
  address String
  phone   String
  vehicle String

  @@unique([cpf])
  @@index([cpf])
  @@map("drivers")
}

model Passenger {
  id                    String  @id @default(cuid())
  name                  String
  cpf                   String
  age                   Int
  gender                Gender
  address               String
  phone                 String
  prefersNoConversation Boolean

  @@unique([cpf])
  @@index([cpf])
  @@map("passengers")
}
